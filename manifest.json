{
	"manifest_version": 2,

	"name": "Video Playback Rate",
	"description": "Universal control of video playback speed",
	"version": "0.6",

	"icons": { "128": "icon.png" },

	"commands": {
		"videoplayrate-plus": {
			"suggested_key": {
				"default": "Alt+Shift+O"
			},
			"description": "Toggle plus"
		},
		"videoplayrate-minus": {
			"suggested_key": {
				"default": "Alt+Shift+P"
			},
			"description": "Toggle minus"
		}
	},

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab"
	]
}
